$(function(){
    function confirmDelete(link) {
        if (confirm("Are you sure you want to delete this post?")) {
            deleteMessage(link);
        };
    }
    function deleteMessage(link) {
        $.ajax({
            type: "DELETE",
            url: link.attr("message-url"),
        }).done(function(msg) {
            link.closest(".collection-item").remove();
        });
    }
    $("a.delete").click(function() {
        confirmDelete($(this));
        return false;
    });
});
